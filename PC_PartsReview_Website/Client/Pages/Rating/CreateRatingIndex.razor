    //     PcParts = await _client.GetFromJsonAsync<List<PcPart>>($"{Endpoints.PcPartEndpoint}");
    // }


    private async Task CreateRating()
    {
        await _client.PostAsJsonAsync(Endpoints.RatingEndpoint, rating);
        _navManager.NavigateTo("/ratings/");
    }

}
